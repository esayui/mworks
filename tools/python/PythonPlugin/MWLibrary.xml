<MWElements>

  <MWElement name="Python File Resource">
    <match_signature>resource[@type="python_file"]</match_signature>

    <isa>Resource</isa>

    <description>
A special type of resource file that contains Python source code.  The file is executed when the experiment loads.
    </description>

    <code>
      <resource type="python_file"
                tag="Python File Resource"
                path=""
              />
    </code>
  </MWElement>

  <MWElement name="Run Python File">
    <match_signature>action[@type="run_python_file"]</match_signature>

    <isa>Action</isa>

    <description>
Execute the specified file as Python source code
    </description>

    <code>
      <action type="run_python_file"
              tag="Run Python File"
              path=""
              stop_on_failure="NO"
              />
    </code>
  </MWElement>

  <MWElement name="Run Python String">
    <match_signature>action[@type="run_python_string"]</match_signature>

    <isa>Action</isa>

    <description>
Execute the given string as Python source code
    </description>

    <code>
      <action type="run_python_string"
              tag="Run Python String"
              code=""
              stop_on_failure="NO"
              />
    </code>
  </MWElement>

</MWElements>
