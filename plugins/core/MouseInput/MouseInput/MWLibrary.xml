<MWElements>
  <MWElement name="Mouse Input Device">
    <match_signature>iodevice[@type="mouse_input"]</match_signature>
    
    <isa>IODevice</isa>

    <icon>smallIOFolder</icon>
    
    <description>
Interface to the system mouse or other pointing device
    </description>
    
    <code>
      <iodevice type="mouse_input"
                tag="Mouse Input Device"
                mouse_position_x=""
                mouse_position_y=""
                mouse_down=""
                hide_cursor="NO"
                use_mirror_window="NO"
                />
    </code>
  </MWElement>
    <MWElement name="Move Mouse Cursor">
        <match_signature>action[@type="move_mouse_cursor"]</match_signature>

        <isa>Action</isa>
        
        <description>
Move the mouse cursor to the specified position on the stimulus display
        </description>
        
        <code>
            <action type="move_mouse_cursor"
                    tag="Move Mouse Cursor"
                    device=""
                    x_position=""
                    y_position=""/>
        </code>
    </MWElement>
</MWElements>
